@model Lab1Model
<div class="row">
    <div class="col-md-4">
        <form asp-action="Lab1" asp-controller="Labs" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group" col>
                    <label asp-for="x" class="control-label">First number</label>
                    <input type="number" asp-for="x" class="form-control" />
                    <span asp-validation-for="x"></span>
                </div>
                <div class="form-group">
                    <label asp-for="y" class="control-label">Enter second number</label>
                    <input type="number" asp-for="y" class="form-control" />
                    <span asp-validation-for="y"></span>
                </div>
                <div class="form-group">
                    <label asp-for="answer" class="control-label">Your answer is:</label>
                    <input type="number" asp-for="@ViewData["result"]" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>