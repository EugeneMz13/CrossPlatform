@model TaskAuthenticationAuthorization.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Log in</h2>

<p>
    <a asp-action="Register" asp-controller="Accounts">Registration</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Accounts" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group" col>
                    <label asp-for="Email" class="control-label">Enter email</label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Enter password</label>
                    <input type="password" asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
